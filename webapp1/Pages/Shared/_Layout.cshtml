<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webapp1.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Huninn&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900&family=Zen+Old+Mincho&display=swap" rel="stylesheet">
</head>
<body style="overflow-y: scroll; margin: 0; padding: 0;">

    <!-- Navbar đặt ngoài container-fluid -->
    <nav class="navbar">
        <a class="navbar-brand" href="#">Trường THPT Thủ Đức</a>
    </nav>

    <!-- Nội dung chính -->
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="subfooter">
        © 2025 THPT Thủ Đức. All rights reserved.
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="/js/tokenManager.js"></script>
    <script type="module">
        import { initializeTokenManager } from "/js/tokenManager.js";
        initializeTokenManager();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
